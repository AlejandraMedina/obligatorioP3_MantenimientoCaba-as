@model PresentacionMVC.Models.AltaCabañaViewModel

@{
    ViewData["Title"] = "CreateCabaña";
}

<h1>Crear Cabaña</h1>



<hr />
<div>@ViewBag.Mensaje</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCabaña"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <div class="form-group">
                <label asp-for="Cabaña.Nombre" class="control-label"></label>
                <input asp-for="Cabaña.Nombre" class="form-control" />
                <span asp-validation-for="Cabaña.Nombre" class="text-danger"></span>
         </div>

            <div class="form-group">
                <label asp-for="Cabaña.NumHabitacion" class="control-label"></label>
                <input asp-for="Cabaña.NumHabitacion" class="form-control" />
                <span asp-validation-for="Cabaña.NumHabitacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select name="IdTipoSeleccionado" id="tipos">
                    @foreach (var tipo in Model.Tipos)
                    {
                        <option value="@tipo.id">@tipo.Nombre</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>



      
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
