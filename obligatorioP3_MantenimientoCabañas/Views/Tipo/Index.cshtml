@model PresentacionMVC.Models.AltaTipoViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Tipos disponibles de cabañas</h1>
<div>@ViewBag.Mensaje</div>
<p>
    <a asp-action="CreateTipo">Crear nuevo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tipo.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tipos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {/* id = item.Id*/ })                     
                    @Html.ActionLink("Delete", "Delete", new {/* id = item.Id*/ })
                </td>
            </tr>
        }
    </tbody>
</table>
